        <activity
            android:name=".MainActivity"
            android:label="Demo"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|stateHidden" />

        <activity
            android:name="com.example.dxc.xfdemo.FaceRequestActivity"

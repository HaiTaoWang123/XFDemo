<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical|left"
            android:orientation="horizontal"
            android:padding="5dp">

            <RadioButton
                android:id="@+id/rb_text"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@drawable/rb_background_selector"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="文本"
                android:textColor="@drawable/rb_textcolor_selector"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/rb_url"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@drawable/rb_background_selector"
                android:button="@null"
                android:gravity="center"
                android:text="URL"
                android:textColor="@drawable/rb_textcolor_selector"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/rb_sms"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@drawable/rb_background_selector"
                android:button="@null"
                android:gravity="center"
                android:text="短信"
                android:textColor="@drawable/rb_textcolor_selector"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/rb_tel"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@drawable/rb_background_selector"
                android:button="@null"
                android:gravity="center"
                android:text="电话号码"
                android:textColor="@drawable/rb_textcolor_selector"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/rb_vcd"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@drawable/rb_background_selector"
                android:button="@null"
                android:gravity="center"
                android:text="电子名片"
                android:textColor="@drawable/rb_textcolor_selector"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/rb_wifi"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@drawable/rb_background_selector"
                android:button="@null"
                android:gravity="center"
                android:text="WIFI账号"
                android:textColor="@drawable/rb_textcolor_selector"
                android:textSize="18sp" />
        </RadioGroup>
    </HorizontalScrollView>

    <android.support.v4.view.ViewPager
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:persistentDrawingCache="animation">

    </android.support.v4.view.ViewPager>

</LinearLayout>
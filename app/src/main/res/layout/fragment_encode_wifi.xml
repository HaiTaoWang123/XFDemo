<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/tv_count_name"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:gravity="left|center_vertical"
                android:text="账号："
                android:textColor="#333333"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/et_count_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignBottom="@+id/tv_count_name"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tv_count_name"
                android:background="@drawable/edit_text_shape"
                android:gravity="center_vertical|top|left"
                android:hint="请输入账号"
                android:inputType="text"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="#333333"
                android:textColorHint="#999999"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_password"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_count_name"
                android:layout_marginTop="15dp"
                android:gravity="left|center_vertical"
                android:text="密码："
                android:textColor="#333333"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignBottom="@+id/tv_password"
                android:layout_alignTop="@+id/tv_password"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tv_password"
                android:background="@drawable/edit_text_shape"
                android:gravity="center_vertical|top|left"
                android:hint="请输入密码"
                android:inputType="number"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="#333333"
                android:textColorHint="#999999"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/tv_password"
                android:layout_marginTop="15dp"
                android:gravity="left|center_vertical"
                android:text="加密类型："
                android:textColor="#333333"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/sp_type"
                style="@style/android:Theme.Holo.Light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_type"
                android:layout_alignTop="@+id/tv_type"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tv_type"
                android:entries="@array/wifi_type"
                android:gravity="center_vertical|left"
                android:spinnerMode="dialog" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
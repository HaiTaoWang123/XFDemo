<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/tv_tel"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:gravity="left|center_vertical"
            android:text="电话号码："
            android:textColor="#333333"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_tel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_tel"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_tel"
            android:background="@drawable/edit_text_shape"
            android:gravity="center_vertical|top|left"
            android:hint="请输入正确的电话号码"
            android:inputType="number"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="#333333"
            android:textColorHint="#999999"
            android:textSize="18sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv_tel"
            android:orientation="vertical">

        <com.example.dxc.xfdemo.widget.MyHzScrollView
            android:id="@+id/hs_tel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:layout_margin="5dp">

            <ListView
                android:id="@+id/rv_tel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </ListView>

        </com.example.dxc.xfdemo.widget.MyHzScrollView>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>